// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/java
{
	"name": "Java",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/java:1-11-bullseye",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "none",
			"installMaven": "false",
			"installGradle": "false"
		},
		"ghcr.io/devcontainers/features/desktop-lite:1": {}
	},

	"forwardPorts": [6080],
	"portsAttributes": {
		"6080": {
			"label": "desktop"
		}
	},
	
	"dev.containers.defaultExtensions": [
		"vscjava.vscode-java-pack",
		"codezombiech.gitignore",
		"github.vscode-pull-request-github"
	],

	"remoteUser": "vscode",

	// This is applicable to entire container
	"containerEnv": {
		// Set the $CLASSPATH for Java libraries
		"CLASSPATH": ".:stdlib.jar",	

		// Set $DISPLAY environmnet variable to display GUIs from docker container
		"DISPLAY": "host.docker.internal:0"	
	},

	// This is specific to VSCode
	"remoteEnv": {
		// Set the $CLASSPATH for Java libraries
		"CLASSPATH": "${containerEnv:CLASSPATH}:.:stdlib.jar",

		// Set $DISPLAY environmnet variable to display GUIs from docker container
		"DISPLAY": "host.docker.internal:0"
	},

	"hostRequirements": {
		"cpus": 4,
		"memory": "4gb"
	}

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}